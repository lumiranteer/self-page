---
import BaseLayout from '../layouts/BaseLayout.astro';
import FirstScreen from '../components/Index/FirstScreen.astro';
import SecondScreen from '../components/Index/SecondScreen.astro';

const title = 'Lumirant - 心有所想，行有所向';
const description = 'Lumirant的个人博客';
const permalink = Astro.site.href;
const blogOwner = 'Lumirant';
const blogSubTitle = '心有所想，行有所向。';
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <FirstScreen blogSubTitle = {blogSubTitle} />
  <SecondScreen />
</BaseLayout>

<style is:inline>
  .layout {
    scroll-snap-type: x mandatory;
  }
</style>

