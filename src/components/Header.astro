---
import Logo from './Logo.astro'
import Nav from './Nav.astro'
import { ViewTransitions } from 'astro:transitions';

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }
</style>

<header>
  <Logo />
  <Nav current={current} />
  <ViewTransitions fallback="animate" />
</header>
